# Database Configuration
# Primary method: Use `npx netlify db init` to auto-configure
# Fallback method: Manual Neon database setup
DATABASE_URL=postgres://user:password@host:5432/database

# JWT Configuration
JWT_SECRET=your-secret-key-here

# Medical Certificate Encryption Key (Production)
# Generate a secure random key for production: openssl rand -base64 32
MEDICAL_CERT_ENCRYPTION_KEY=your-secure-encryption-key-here

# Medical Certificate Retention Period (GDPR Compliance)
# Number of days to keep medical certificates (default: 730 = 2 years)
MEDICAL_CERT_RETENTION_DAYS=730

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=max.giurastante@omniaservices.net

# Domain Configuration - Comma separated list of allowed email domains for OmniaGroup companies
ALLOWED_EMAIL_DOMAINS=omniaservices.net,omniaelectronics.com

# Netlify Configuration (automatically set by platform)
# NETLIFY_SITE_ID=
# NETLIFY_AUTH_TOKEN=

# Optional Email Configuration
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@example.com
EMAIL_SMTP_PASS=your-password
EMAIL_FROM=noreply@ominiagroup.com

# Optional Analytics
NEXT_PUBLIC_GA_ID=
SENTRY_DSN=